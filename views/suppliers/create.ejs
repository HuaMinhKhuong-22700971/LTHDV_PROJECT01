<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Thêm nhà cung cấp</h2>

  <form method="POST" action="/suppliers/create" class="mt-3">
    <div class="mb-3">
      <label for="name" class="form-label">Tên nhà cung cấp</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên nhà cung cấp" required>
    </div>

    <div class="mb-3">
      <label for="address" class="form-label">Địa chỉ</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Nhập địa chỉ" required>
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">Điện thoại</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Nhập số điện thoại" required>
    </div>

    <button type="submit" class="btn btn-primary">Thêm nhà cung cấp</button>
    <a href="/suppliers" class="btn btn-secondary ms-2">Quay lại danh sách</a>
  </form>
</div>

<%- include('../partials/footer') %>
