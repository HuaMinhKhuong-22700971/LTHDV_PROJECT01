<%- include('../partials/header') %>

<h2>Chỉnh sửa nhà cung cấp</h2>

<form method="POST" action="/suppliers/<%= supplier._id %>/edit">
  <div class="mb-3">
    <label class="form-label">Tên:</label>
    <input type="text" class="form-control" name="name" value="<%= supplier.name %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Địa chỉ:</label>
    <input type="text" class="form-control" name="address" value="<%= supplier.address %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Điện thoại:</label>
    <input type="text" class="form-control" name="phone" value="<%= supplier.phone %>" required>
  </div>

  <button type="submit" class="btn btn-success">Cập nhật</button>
  <a href="/suppliers" class="btn btn-secondary">Quay lại</a>
</form>

<%- include('../partials/footer') %>
