<%- include('../partials/header') %>

<div class="container my-5">
  <h2 class="mb-4">Danh sách nhà cung cấp</h2>

  <div class="mb-3">
    <a href="/suppliers/create" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Thêm nhà cung cấp
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th scope="col">Tên nhà cung cấp</th>
          <th scope="col">Địa chỉ</th>
          <th scope="col">Điện thoại</th>
          <th scope="col">Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% suppliers.forEach(supplier => { %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= supplier.address %></td>
            <td><%= supplier.phone %></td>
            <td class="text-center">
              <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm me-2">
                <i class="bi bi-pencil-square"></i> Sửa
              </a>
              <form action="/suppliers/<%= supplier._id %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa nhà cung cấp này?')">
                  <i class="bi bi-trash"></i> Xóa
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
