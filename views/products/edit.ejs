<!DOCTYPE html>
<html>
<head>
  <title>Chỉnh sửa sản phẩm</title>
  <link rel="stylesheet" href="/css/style.css"> <!-- nếu có CSS -->
</head>
<body>
  <h1>Chỉnh sửa sản phẩm</h1>

  <form method="POST" action="/products/<%= product._id %>/edit">
    <label>Tên:</label>
    <input type="text" name="name" value="<%= product.name %>" required><br><br>

    <label>Giá:</label>
    <input type="number" name="price" value="<%= product.price %>" required><br><br>

    <label>Số lượng:</label>
    <input type="number" name="quantity" value="<%= product.quantity %>" required><br><br>

    <label>Nhà cung cấp:</label>
    <select name="supplierId" required>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" 
          <%= product.supplierId.equals(s._id) ? 'selected' : '' %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select><br><br>

    <button type="submit">Cập nhật</button>
  </form>

  <a href="/products">Quay lại danh sách</a>
</body>
</html>
